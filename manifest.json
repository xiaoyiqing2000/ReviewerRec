{
  "name": "审稿人推荐系统",
  "description": "Reviewer Recommender for Magtech",
  "version": "1.0.0",
  "permissions": [
    "activeTab", "downloads", "<all_urls>", "tabs", "storage"
  ],
  "browser_action": {
    "default_title": "审稿人推荐系统",
    "default_icon": "resource/icon.png"
  },
  "web_accessible_resources": [
    "resource/*"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "icons": { "16": "resource/icon.png",
             "48": "resource/icon.png",
             "128": "resource/icon.png" },
  "manifest_version": 2
}
